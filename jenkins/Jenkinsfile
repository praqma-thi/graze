pipeline {
    agent {
        label 'docker'
    }

    stages {
        stage ('build') {
            steps {
                sh './gradlew build'
            }
        }

        stage ('installDist') {
            steps {
                sh './gradlew installDist'
            }
        }

        stage ('simulate') {
            steps {
                sh 'echo run tests here'
            }
        }
    }
}
